<p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
     <%= render 'users/user', users:@user, book:@books %>

      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
         <tr>
           <th>
            <%= attachment_image_tag @user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %>
            <p><%= link_to @book.user.name, user_path(@user.id) %></p>
           </th>
           <th><%= @book.title %></th>
           <th><%= @book.body %></th>
           <% if @book.user == current_user %>
           <th>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
           </th>
           <th>
            <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
            <!--destroy-->
           <% end %>
           <th>
         </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>