<p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
     <%= render 'users/user', user:@book.user, book:@books %>

      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
         <tr>
           <th>
            <%= link_to user_path(@book.user) do %>
             <%= attachment_image_tag @book.user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %>
             <p><%= @book.user.name %></p>
            <% end %>
           </th>
           <th><%= link_to @book.title, book_path(@book.id) %></th>
           <th><%= @book.body %></th>
           <% if @book.user == current_user %>
           <th>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
           </th>
           <th>
            <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
            <!--destroy-->
           <% end %>
           <th>
         </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>